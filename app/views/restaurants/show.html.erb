<p style="color: green"><%= notice %></p>

<%= render @restaurant %>

<p><%= link_to "See who is the chef at this restaurant", chef_restaurant_path(@restaurant) %></p>

<br>
<p><strong>Reviews</strong></p>
<p><%= link_to "Add a Review", new_restaurant_review_path(@restaurant) %></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">
      <%= review.content %>
      <%= link_to "Delete",
        review_path(review),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
    </li>
  <% end %>
</ul>
<br>

<div>
  <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant) %> |
  <%= link_to "Back to restaurants", restaurants_path %>

  <%= button_to "Destroy this restaurant", @restaurant, method: :delete %>
</div>
